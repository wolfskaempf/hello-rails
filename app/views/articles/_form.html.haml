= form_for(@article, remote: true) do |f|
  - if @article.errors.any?
    .error_explanation
      %h2= pluralize(@article.errors.count, "error")
      prohibited this article from being saved:
      %ul
      - @article.errors.full_messages.each do |message|
        %li= message

  .field
    = f.label :body
    <br>
    = f.text_area :body
  .field
    = f.label :title
    <br>
    = f.text_field :title
  .field
    = f.label :published
    <br>
    = f.check_box :published
  .actions
    = f.submit
